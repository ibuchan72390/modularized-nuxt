// https://github.com/prettier/tslint-plugin-prettier#usage
{
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",

    // Required for tslint-plugin-prettier
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,

    // Rules I find fucking annoying
    "ordered-imports": false,           // IDC if imports are alphabetically ordered all the time
    "no-console": false,                // This is a sample app, IDC about logs to console, debugging purposes
    "member-ordering": false,           // This is a sample app, IDC about alphabetical order
    "object-literal-sort-keys": false   // This is a sample app, IDC about alphabetical order
  }
}
